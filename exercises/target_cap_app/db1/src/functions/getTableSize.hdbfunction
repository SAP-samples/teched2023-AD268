FUNCTION "GETTABLESIZE" ()
	RETURNS table( RECORD_COUNT INTEGER, TABLE_SIZE VARCHAR(20), TABLE_SYNONYM VARCHAR(20))
	LANGUAGE SQLSCRIPT 
	SQL SECURITY INVOKER AS 
BEGIN 
RETURN
     SELECT  "RECORD_COUNT" as record_count, "TABLE_SIZE" as TABLE_SIZE, "TABLE_NAME" as TABLE_SYNONYM FROM "M_TABLES" where ("TABLE_NAME"='USERDATA_USER') ORDER BY "TABLE_NAME";
END;
